{
  "nodeModulesDir": "auto",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "deno run -A --watch=static/,routes/ dev.ts",
    "build": "deno run -A dev.ts build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update ."
  },
  "unstable": ["kv", "cron", "fmt-component", "raw-imports"],
  "fmt": {
    "exclude": [
      "codegen/*"
    ]
  },
  "lint": {
    "exclude": [
      "codegen/*"
    ],
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "@apollo/server": "npm:@apollo/server@^5.0.0",
    "@as-integrations/cloudflare-workers": "npm:@as-integrations/cloudflare-workers@^1.1.1",
    "@graphql-codegen/cli": "npm:@graphql-codegen/cli@^5.0.7",
    "@graphql-codegen/typescript-resolvers": "npm:@graphql-codegen/typescript-resolvers@^4.5.1",
    "effect": "npm:effect@^3.17.7",
    "fresh": "jsr:@fresh/core@^2.0.0-alpha.58",
    "preact": "npm:preact@^10.27.0",
    "@preact/signals": "npm:@preact/signals@^2.2.1",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@fresh/plugin-tailwind": "jsr:@fresh/plugin-tailwind@^0.0.1-alpha.9",
    "@tailwindcss/postcss": "npm:@tailwindcss/postcss@^4.1.10",
    "postcss": "npm:postcss@^8.5.6"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head"
    ]
  }
}
